._wp-u {
    text-decoration: underline;
}

._wp-hide {
    display: none;
}

.WxEmojiView {
    align-items: center;
}

.wxEmoji {
    width: 16px;
    height: 16px;
}

._wp-tr {
    display: flex;
    border-right: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
    border-top: 1px solid #e0e0e0;
}

._wp-th,
._wp-td {
    flex: 1;
    padding: 5px;
    font-size: 28rpx;
    border-left: 1px solid #e0e0e0;
    word-break: break-all;
}

._wp-td:last {
    border-top: 1px solid #e0e0e0;
}

._wp-th {
    background: #f0f0f0;
    border-top: 1px solid #e0e0e0;
}

._wp-del {
    display: inline;
}

._wp-figure {
    overflow: hidden;
}