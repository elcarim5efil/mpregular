.wxParse {
    margin: 0 5px;
    font-family: Helvetica, sans-serif;
    font-size: 28rpx;
    color: #666;
    line-height: 1.8;
}

._wp-view {
    word-break: break-all;
    overflow: auto;
}

._wp-inline {
    display: inline;
    margin: 0;
    padding: 0;
}

/*//标题 */

._wp-div {
    margin: 0;
    padding: 0;
}

._wp-h1 {
    font-size: 2em;
    margin: .67em 0
}

._wp-h2 {
    font-size: 1.5em;
    margin: .75em 0
}

._wp-h3 {
    font-size: 1.17em;
    margin: .83em 0
}

._wp-h4 {
    margin: 1.12em 0
}

._wp-h5 {
    font-size: .83em;
    margin: 1.5em 0
}

._wp-h6 {
    font-size: .75em;
    margin: 1.67em 0
}

._wp-h1 {
    font-size: 18px;
    font-weight: 400;
    margin-bottom: .9em;
}

._wp-h2 {
    font-size: 16px;
    font-weight: 400;
    margin-bottom: .34em;
}

._wp-h3 {
    font-weight: 400;
    font-size: 15px;
    margin-bottom: .34em;
}

._wp-h4 {
    font-weight: 400;
    font-size: 14px;
    margin-bottom: .24em;
}

._wp-h5 {
    font-weight: 400;
    font-size: 13px;
    margin-bottom: .14em;
}

._wp-h6 {
    font-weight: 400;
    font-size: 12px;
    margin-bottom: .04em;
}

._wp-h1,
._wp-h2,
._wp-h3,
._wp-h4,
._wp-h5,
._wp-h6,
._wp-b,
._wp-strong {
    font-weight: bolder
}

._wp-i,
._wp-cite,
._wp-em,
._wp-var,
._wp-address {
    font-style: italic
}

._wp-pre,
._wp-tt,
._wp-code,
._wp-kbd,
._wp-samp {
    font-family: monospace
}

._wp-pre {
    white-space: pre
}

._wp-big {
    font-size: 1.17em
}

._wp-small,
._wp-sub,
._wp-sup {
    font-size: .83em
}

._wp-sub {
    vertical-align: sub
}

._wp-sup {
    vertical-align: super
}

._wp-s,
._wp-strike,
._wp-del {
    text-decoration: line-through
}

/*_wp-自定义个性化的css样式*/

/*增加video的css样式*/

._wp-strong,
._wp-s {
    display: inline
}

._wp-a {
    color: deepskyblue;
    word-break: break-all;
    overflow: auto;
}

._wp-video {
    text-align: center;
    margin: 10px 0;
}

._wp-video-video {
    width: 100%;
}

._wp-img {
    /* background-color: #efefef; */
    display: block;
    overflow: hidden;
}

._wp-img-inline {
    /*background-color: #efefef;*/
    display: inline-block;
    overflow: hidden;
}

._wp-blockquote {
    margin: 0;
    padding: 10px 0 10px 5px;
    font-family: Courier, Calibri, "宋体";
    background: #f5f5f5;
    border-left: 3px solid #dbdbdb;
}

._wp-code,
._wp-wxxxcode-style {
    display: inline;
    background: #f5f5f5;
}

._wp-ul {
    margin: 20rpx 10rpx;
}

._wp-li,
._wp-li-inner {
    display: flex;
    align-items: baseline;
    margin: 10rpx 0;
}

._wp-li-text {
    align-items: center;
    line-height: 20px;
}

._wp-li-circle {
    display: inline-flex;
    width: 5px;
    height: 5px;
    background-color: #333;
    margin-right: 5px;
}

._wp-li-square {
    display: inline-flex;
    width: 10rpx;
    height: 10rpx;
    background-color: #333;
    margin-right: 5px;
}

._wp-li-ring {
    display: inline-flex;
    width: 10rpx;
    height: 10rpx;
    border: 2rpx solid #333;
    border-radius: 50%;
    background-color: #fff;
    margin-right: 5px;
}

